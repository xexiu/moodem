{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["ES6", "dom"],
        "moduleResolution": "node",
        "noEmit": true,
        "target": "esnext",
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": false,
        "module": "esnext",
        "compilerOptions": {
            "typesRoot": ["./src/types"]
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
